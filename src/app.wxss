 .page {
     font-family: 'Microsoft Yahei';
 }

 .page__hd {
     padding: 40px;
 }

 .page__bd {
     -padding-bottom: 40px;
 }


 .page__bd_spacing {
     padding-left: 15px;
     padding-right: 15px;
 }

 .page__ft {
     padding-bottom: 10px;
     text-align: center;
 }

 .page__title {
     text-align: left;
     font-size: 20px;
     font-weight: 400;
 }

 .page__desc {
     margin-top: 5px;
     color: #888888;
     text-align: left;
     font-size: 14px;
 }

 .canvas {
     width: 100%;
     height: 200px;
 }

 .weui-navbar {
     background-color: white;
 }

 .login_progress {
     color: rgba(250, 250, 250, 1);
     font-size: 13px;
     display: inline-block;
     width: 30px;
     height: 30px;
     background: rgba(60, 210, 60, 0.7);
     border-top-left-radius: 20px;
     border-bottom-left-radius: 20px;
     text-align: center;
     line-height: 30px;
     position: absolute;
     right: 0rpx;
     margin-top: 5px;
     z-index: 1;
 }

 .weui-media-box::before,
 .weui-panel__hd::after {
     left: 0;
 }

 .weui-media-box::before {
     border-color: #eee;
 }

 .fr {
     float: right;
 }
.navtext{
    text-decoration: underline;
    color: blue;
    font-style: italic
}


navigator {

    font-size:12px;
}




.weui-grid {
  position: relative;
  float: left;
  padding: 16px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 0px solid #D9D9D9;
  box-shadow:10px 0px 25px -13px rgba(10,10,10,0.25);
  border-bottom: 0px solid #D9D9D9;
}

.weui-grid__label {
  margin-top: 10px;
  display: block;
  text-align: center;
  color: rgba(60,60,60,0.7);
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-panel {
  background-color: #FFFFFF;
  margin-top: 10px;
  position: relative;
  overflow: hidden;
}
.weui-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 5px solid #E5E5E5;
  color: #E5E5E5;
}


.weui-media-box__info {
  margin-top: 0px;
  padding-bottom: 5px;
  font-size: 13px;
  color: #CECECE;
  line-height: 1em;
  list-style: none;
  overflow: hidden;
}